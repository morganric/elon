<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs row">
    <div class="col-md-6">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.label :summary %>
    <br/>
    <%= f.text_area :summary,  cols: "60", rows: "5", :style => "border-radius:5px;border: lightgrey 1px solid" %>
    <br/><br/>
     <%= f.label :image %>
    <%= f.file_field :image %>
    <br/>
    <%= image_tag( @post.image.url(:thumb), :class => "thumbail") %>
    <br/><br/>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, :onfocus=>"this.value='';", :value=> @post.tags.map(&:name).join(",") %>

    <br/>
    </div>
    <div class="col-md-6">
    <%= f.input :author %>
    <%= f.input :provider %>
    <%= f.input :thumbnail_url %>
    <div class="well">
    <h3> Admin </h3>
      <% if user_signed_in? %>
        <% if current_user.try(:admin?) %>
          <%= f.label :audio %>
          <%#= f.attachinary_file_field :audio %>
          <%= f.file_field :audio %>
          <%= f.input :featured %>
          <%= f.input :published %>
          <%= f.input :hidden %>
        <% end %>
      <% end %>
    </div>
    </div>
        <%= f.input :plays, as: :hidden %>
        <%= f.input :user_id, as: :hidden %>
    <%= f.input :body, as: :hidden %>
  </div>
  <hr/>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
  
$(document).ready(function(){
  $('.attachinary-input').attachinary()
});

</script>
