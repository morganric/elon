<h1>Featured</h1>
<hr/>

<div class="col-md-12m row">

<% @posts.each do |post| %>
	<div class="col-md-4 clearfix">
	<div class="thumbnail">
      <%= link_to image_tag(post.image.url(:large)), user_post_path(:user_id => post.user.profile.slug, :id => post.slug) %>
      <div class="caption">
        <h3>
        <%= link_to truncate(post.title, :length => 20 ), user_post_path(:user_id => post.user.profile.slug, :id => post.slug) %><br/>
        <small>
        via <%= link_to post.user.profile.display_name, vanity_profile_path(:id => post.user.profile.slug) %>
        </small>
        </h3>
        <% post.tag_list.each do |tag| %>
      <label class="label label-default"> <i class="glyphicon glyphicon-tag"></i> 
      <%= link_to tag, tag_path(tag) %></label>
  <% end %>
  <br/>
  <br/></div>
        <p class=""><a href="<%= post_path(post) %>" class="btn btn-primary " role="button">View</a> 
        
        <!-- <a href="#" class="btn btn-default" role="button">view</a> -->
        </p>
      </div>
    </div>


<% end %>

</div>