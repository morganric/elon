<h1>Featured</h1>
<hr/>
<div class=" row col-md-12 clearfix">

<% @posts.each do |post| %>
	<div class="col-md-4">
	<div class="thumbnail">
      <%= link_to image_tag(post.image.url(:large)), post_path(post) %>
      <div class="caption">
        <h3>
        <%= link_to post.title, post %><br/>
        <small>
        via <%= post.user.profile.display_name %>
        </small>
        </h3>
        <% post.tag_list.each do |tag| %>
      <label class="label label-default"> <i class="glyphicon glyphicon-tag"></i> 
      <%= link_to tag, tag_path(tag) %></label>
  <% end %>
  <br/>
  <br/></div>
        <p><a href="<%= post_path(post) %>" class="btn btn-primary" role="button">View</a> 
        <!-- <a href="#" class="btn btn-default" role="button">view</a></p> -->
      </div>
    </div>


<% end %>

</div>