<h1>
 Tagged: <%= @tag %>
</h1>
<hr/>
    <% @posts.each do |post| %>
        <%= link_to image_tag(post.image.url(:thumbnail), :class => "pull-left thumbnail"), post %>

        <h2> &nbsp;<%= link_to post.title, post %>
        <br/>
        <small>&nbsp; by <%= link_to post.user.profile.display_name, profile_path(post.user.profile) %></small>
        </h2>
        <% post.tag_list.each do |tag| %>
      <label class="label label-default"> <i class="glyphicon glyphicon-tag"></i> 
      <%= link_to tag, tag_path(tag) %></label>
  <% end %>

        <% if user_signed_in? %>
            <% if current_user.try(:admin?) %>
            &nbsp; <span>
                <%= link_to 'Edit', edit_post_path(post) %>
            </span>
            <span> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </span>
            <% end %>
        <% end %>
      <br>
    <% end %>



