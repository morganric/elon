        $('body').on('click', function(e){
            e.preventDefault;
            $('#cover img').remove();
            $('#embed').fadeIn();
            $('#cover').fadeOut();
            $("#jquery_jplayer_audio_1").jPlayer("play");
          
      });


});




</script>





