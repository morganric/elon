
 <% @posts.each do |post| %>
      <div class="  clearfix" >
        <%= link_to image_tag(post.image.url(:thumbnail) || post.thumbnail_url || "http://res.cloudinary.com/dnffmpcmo/image/upload/v1439982461/logo-100.png", :class => "pull-left thumbnail img-responsive" , :style=> "margin-right:10px; width:100px;"), user_post_path(:user_id => post.user.profile.slug, :id => post.slug) %>
        <h4> <%= link_to post.title, user_post_path(:user_id => post.user.profile.slug, :id => post.slug) %>
        <br/>
        <small>&nbsp; via <%= link_to post.user.profile.display_name || post.user.name, vanity_profile_path(post.user.profile.slug) %></small>
        </h4>
        &nbsp;

        <label class="label label-success">
           <i class="glyphicon glyphicon-play"></i> 
           <%= pluralize(post.plays.to_i, 'play') %>
        </label>
        &nbsp;
        <% post.tag_list.each_with_index do |tag, index| %>
          <% unless index > 5 %> 
            <label class="label label-default"> <i class="glyphicon glyphicon-tag"></i> 
            <%= link_to tag, tag_path(tag) %></label>
            <% end %>
        <% end %> 
             <br/><br/> <hr/>  
      </div>
    <% end %>
