 <% @posts.each do |post| %>
      <div class="row  clearfix">
        <%= link_to image_tag(post.image.url(:thumbnail), :class => "pull-left thumbnail img-responsive"), post %>
        <h4> &nbsp;<%= link_to post.title, post %>
        <br/>
        <small>&nbsp; via <%= link_to post.user.profile.display_name || post.user.name, profile_path(post.user.profile) %></small>
        </h4>
        &nbsp;

        <label class="label label-success">
           <i class="glyphicon glyphicon-play"></i> 
           <%= pluralize(post.plays.to_i, 'play') %>
        </label>
        &nbsp;
        <% post.tags.limit(5).each do |tag| %>
            <label class="label label-default"> <i class="glyphicon glyphicon-tag"></i> 
            <%= link_to tag, tag_path(tag) %></label>
        <% end %>   
      </div>

    <% end %>